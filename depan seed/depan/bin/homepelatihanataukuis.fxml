                        <Label styleClass="stat-label" text="Hari berturut-turut: 7 hari" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Upcoming Deadlines -->
            <VBox spacing="15" styleClass="deadlines-card">
                <Label styleClass="card-title" text="Tenggat Waktu Mendatang" />
                <TableView fx:id="deadlinesTable">
                    <columns>
                        <TableColumn prefWidth="231.0" text="Tugas" />
                        <TableColumn prefWidth="201.0" text="Mata Pelajaran" />
                        <TableColumn prefWidth="247.0" text="Tenggat" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Quick Actions -->
            <HBox spacing="15">
                <Button styleClass="action-button" text="Forum Diskusi" HBox.hgrow="ALWAYS" />
