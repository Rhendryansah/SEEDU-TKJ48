        <VBox HBox.hgrow="ALWAYS">
            <Label styleClass="course-title" text="Ekowisata dan Konservasi Alam" />
            <Label styleClass="mentor-name" text="Mentor: Dr. Rina Wijaya" />
            <ProgressBar progress="0.4" styleClass="course-progress" />
            <HBox spacing="10">
                <Label styleClass="progress-text" text="Progress: 40%" />
