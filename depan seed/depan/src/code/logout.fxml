<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: orange;" styleClass="logout-container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
        <Image url="@images/logo.png" />
    </ImageView>

    <Label styleClass="logout-title" text="Keluar dari Akun" />

    <Label styleClass="logout-message" text="Apakah Anda yakin ingin keluar?" textAlignment="CENTER" wrapText="true" />

    <HBox alignment="CENTER" spacing="20">
        <Button styleClass="cancel-button" text="Batal" />
        <Button styleClass="logout-button" text="Keluar" />
    </HBox>

    <VBox alignment="CENTER" spacing="10" styleClass="additional-options">
        <Label styleClass="or-label" text="Atau" />
        <Hyperlink styleClass="home-link" text="Kembali ke Beranda" />
    </VBox>
</VBox>
