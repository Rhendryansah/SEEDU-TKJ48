<ScrollPane fitToWidth="true" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox spacing="30" style="-fx-padding: 30;">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <ImageView fitHeight="60" fitWidth="85.0">
                    <Image url="@../../../SEEDU%20NEW/Men-Headshots-Jacket-Semi-Formal.-Photo-by-Orlandosydney.com-202300205.jpg" />
                </ImageView>
                <VBox>
                    <Label styleClass="welcome-text" text="Selamat datang, Jaden!" />
                    <Label styleClass="subheader-text" text="Paket Pelatihan: Pariwisata Berkelanjutan" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button styleClass="header-button" text="Notifikasi" />
                <Button styleClass="header-button" text="Profil" />
            </HBox>

            <!-- Progress Overview -->
            <VBox spacing="15" styleClass="progress-card">
                <Label styleClass="card-title" text="Perkembangan Pelatihan" />
                <ProgressBar progress="0.6" styleClass="overall-progress" />
                <HBox spacing="20">
                    <VBox styleClass="progress-stat" HBox.hgrow="ALWAYS">
                        <Label styleClass="stat-value" text="60%" />
                        <Label styleClass="stat-label" text="Progress Keseluruhan" />
                    </VBox>
                    <VBox styleClass="progress-stat" HBox.hgrow="ALWAYS">
                        <Label styleClass="stat-value" text="0/5" />
                        <Label styleClass="stat-label" text="SubTest Selesai" />
                    </VBox>
                    <VBox styleClass="progress-stat" HBox.hgrow="ALWAYS">
                        <Label styleClass="stat-value" text="15" />
                        <Label styleClass="stat-label" text="Jam Belajar" />
                    </VBox>
                </HBox>
            </VBox>

<!-- Mata Pelajaran -->
<Label styleClass="section-title" text="Mata Pelajaran" />
<VBox spacing="15">
    <!-- Mata Pelajaran 1 -->
    <HBox spacing="15" styleClass="course-card">
        <ImageView fitHeight="80" fitWidth="80">
            <Image url="@path/to/course1_icon.png" />
        </ImageView>
        <VBox HBox.hgrow="ALWAYS">
            <Label styleClass="course-title" text="Pengantar Pariwisata Berkelanjutan" />
            <Label styleClass="mentor-name" text="Mentor: Dr. Siti Rahma" />
