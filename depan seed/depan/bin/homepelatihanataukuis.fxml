        <VBox HBox.hgrow="ALWAYS">
            <Label styleClass="course-title" text="Manajemen Destinasi Wisata Ramah Lingkungan" />
            <Label styleClass="mentor-name" text="Mentor: Prof. Budi Santoso" />
            <ProgressBar progress="0.6" styleClass="course-progress" />
            <HBox spacing="10">
                <Label styleClass="progress-text" text="Progress: 60%" />
                <Region HBox.hgrow="ALWAYS" />
                <Button styleClass="continue-button" text="Lanjutkan" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Mata Pelajaran 3 -->
