                <Label styleClass="progress-text" text="Progress: 80%" />
                <Region HBox.hgrow="ALWAYS" />
                <Button styleClass="continue-button" text="Lanjutkan" />
            </HBox>
        </VBox>
    </HBox>

    <!-- Mata Pelajaran 2 -->
    <HBox spacing="15" styleClass="course-card">
        <ImageView fitHeight="80" fitWidth="80">
            <Image url="@path/to/course2_icon.png" />
