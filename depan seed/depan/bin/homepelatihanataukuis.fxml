        </VBox>
    </HBox>

    <!-- Mata Pelajaran 5 -->
    <HBox spacing="15" styleClass="course-card">
        <ImageView fitHeight="80" fitWidth="80">
            <Image url="@path/to/course5_icon.png" />
        </ImageView>
        <VBox HBox.hgrow="ALWAYS">
            <Label styleClass="course-title" text="Inovasi Teknologi dalam Pariwisata Berkelanjutan" />
            <Label styleClass="mentor-name" text="Mentor: Ir. Arif Pratama" />
            <ProgressBar progress="0.0" styleClass="course-progress" />
