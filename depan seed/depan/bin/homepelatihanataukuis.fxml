    <HBox spacing="15" styleClass="course-card">
        <ImageView fitHeight="80" fitWidth="80">
            <Image url="@path/to/course4_icon.png" />
        </ImageView>
        <VBox HBox.hgrow="ALWAYS">
            <Label styleClass="course-title" text="Pemberdayaan Masyarakat dalam Pariwisata" />
            <Label styleClass="mentor-name" text="Mentor: Dra. Maya Putri" />
